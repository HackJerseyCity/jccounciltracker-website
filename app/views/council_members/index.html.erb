<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Council Members</h1>

  <% if @current_members.any? %>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @current_members.each do |member| %>
        <%= link_to council_member_path(member), class: "block bg-white rounded-lg border border-gray-200 p-6 hover:border-blue-300 hover:shadow-sm transition" do %>
          <h2 class="font-semibold text-gray-900"><%= member.full_name %></h2>
          <span class="inline-flex items-center mt-2 px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= member.seat_label %>
          </span>
          <% if member.votes_count > 0 %>
            <p class="mt-3 text-sm text-gray-500"><%= member.votes_count %> recorded votes</p>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg border border-gray-200 p-12 text-center">
      <p class="text-gray-500">No council members available yet.</p>
    </div>
  <% end %>
</section>
