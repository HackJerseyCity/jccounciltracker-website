<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <nav class="mb-6 text-sm text-gray-500">
    <%= link_to "Meetings", meetings_path, class: "hover:text-blue-600" %> <span class="mx-1">/</span>
    <span class="text-gray-900"><%= @meeting.date.strftime("%B %-d, %Y") %></span>
  </nav>

  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900"><%= @meeting.display_name %></h1>
    <% if authenticated? && Current.user&.admin? %>
      <%= link_to "Upload agenda", new_admin_meeting_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
    <% end %>
  </div>

  <% if @meeting.agenda_versions.size > 1 %>
    <div class="mt-4">
      <%= form_with url: meeting_path(@meeting), method: :get, local: true, class: "flex items-center gap-3" do %>
        <label for="version" class="text-sm font-medium text-gray-700">Agenda version:</label>
        <select name="version" id="version" onchange="this.form.requestSubmit()" class="block rounded-md border-gray-300 shadow-sm text-sm focus:border-blue-500 focus:ring-blue-500">
          <% @meeting.agenda_versions.each do |v| %>
            <option value="<%= v.version_number %>" <%= "selected" if v == @agenda_version %>><%= v.display_label %></option>
          <% end %>
        </select>
      <% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-3 gap-4 mt-6 mb-10">
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <p class="text-2xl font-bold text-gray-900"><%= @agenda_version&.agenda_pages || "N/A" %></p>
      <p class="text-sm text-gray-500">Agenda pages</p>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <p class="text-2xl font-bold text-gray-900"><%= @agenda_sections.size %></p>
      <p class="text-sm text-gray-500">Sections</p>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <p class="text-2xl font-bold text-gray-900"><%= @agenda_sections.sum { |s| s.agenda_items.size } %></p>
      <p class="text-sm text-gray-500">Agenda items</p>
    </div>
  </div>

  <div class="space-y-6">
    <% @agenda_sections.each do |section| %>
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h2 class="font-semibold text-gray-900"><%= section.number %>. <%= section.title %></h2>
          <span class="text-xs text-gray-500"><%= section.agenda_items.size %> items</span>
        </div>

        <% if section.agenda_items.any? %>
          <ul class="divide-y divide-gray-100">
            <% section.agenda_items.each do |item| %>
              <li class="px-6 py-4">
                <div class="flex items-start gap-3">
                  <span class="text-sm font-medium text-gray-400 whitespace-nowrap mt-0.5"><%= item.item_number %></span>
                  <div class="flex-1 min-w-0">
                    <% if item.url.present? %>
                      <p class="text-sm"><%= link_to item.title, item.url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-700 hover:text-blue-900 hover:underline" %></p>
                    <% else %>
                      <p class="text-sm text-gray-900"><%= item.title %></p>
                    <% end %>
                    <div class="mt-1.5 flex flex-wrap items-center gap-2">
                      <% if item.result.present? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= result_badge_class(item.result) %>"><%= item.result.titleize %></span>
                        <% if item.vote_tally.present? %>
                          <span class="text-xs font-medium text-gray-500">(<%= item.vote_tally %>)</span>
                        <% end %>
                      <% end %>
                      <% if item.file_number.present? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-50 text-blue-700"><%= item.file_number %></span>
                      <% end %>
                      <% item.tags.each do |tag| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800"><%= tag.name %></span>
                      <% end %>
                      <% if item.page_start.present? %>
                        <span class="text-xs text-gray-400">pp. <%= item.page_start %>-<%= item.page_end %></span>
                      <% end %>
                      <% if item.url.present? %>
                        <%= link_to "PDF", item.url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center gap-1 text-xs text-blue-600 hover:text-blue-800" %>
                      <% end %>
                    </div>
                    <% if item.votes.any? %>
                      <div class="mt-2 flex flex-wrap gap-1.5">
                        <% item.votes.sort_by { |v| v.council_member.last_name }.each do |vote| %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= vote_badge_class(vote.position) %>">
                            <%= vote.council_member.last_name.sub(/\s+(Jr|Sr|II|III|IV)\.?\s*$/i, "") %> Â· <%= vote.position.capitalize %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
